<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp">

    <TextView
        android:id="@+id/text_hacks"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/puce"
        android:gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/text_hacks"
        android:layout_alignTop="@+id/text_hacks"
        android:layout_alignEnd="@+id/text_hacks"
        android:background="@color/puce"
        android:layout_alignBottom="@+id/text_hacks"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/text_hacks" />


</RelativeLayout>